{
  // Конфиг TypeScript для фронтенда (React в браузере)
  "extends": "./tsconfig.json", // расширяем ваш текущий, чтобы не ломать среду
  "compilerOptions": {
    // Модульная система для бандлера (Vite/ESM)
    "module": "ESNext",
    // Современный таргет для браузера
    "target": "ES2020",
    // Разрешение модулей для бандлера
    "moduleResolution": "bundler",
    // Включаем новую JSX-трансформацию
    "jsx": "react-jsx",
    // Корневой URL для алиасов (опционально)
    "baseUrl": ".",
    // Генерация деклараций не требуется (Vite сам тип-чекнет)
    "declaration": false,
    // Исходные карты на деве не обязательны
    "sourceMap": true,
    // Выход Vite игнорирует outDir TS — управляет сам Vite
    "outDir": "./dist"
  },
  // В проект фронтенда включаем только исходники приложения
  "include": ["src"]
}